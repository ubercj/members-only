<%= form_with model: @post do |form| %>

  <% if @post.errors.any? %>
    <h2><%= pluralize(post.errors.count, "error") %> were found!!11!1!</h2>

    <ul>
      <% @post.errors.each do %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form.label :author %>
  <%= form.text_field :author %><br>
  <%= form.label :title %>
  <%= form.text_field :title %><br>
  <%= form.label :body, "Post" %>
  <%= form.text_field :body, placeholder: "Type your post here" %><br>
  <%= form.submit "Post Now!" %>
<% end %>