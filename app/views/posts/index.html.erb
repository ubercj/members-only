<p class="notice"><%= notice %></p>

<h1>Sekrit Posts</h1>

<% @posts.each do |post| %>
  <div class="post_container">
    <h5>"<%= post.title %>" by <%= post.author %></h5>
    <p><%= post.body %></p>
    <%= link_to "See post", post %>
    <%= link_to "Delete post", post, method: :delete, data: { confirm: "Are you suuuuure?" } %>
  </div>
<% end %>
<br>
<%= link_to "Make a post", new_post_path %>